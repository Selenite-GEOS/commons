{
	"name": "@selenite/commons",
	"version": "1.0.1",
	"repository": "github:ShaitanLyss/selenite-commons",
	"license": "MIT",
	"packageManager": "pnpm@9.13.2",
	"keywords": [
		"selenite",
		"commons",
		"svelte",
		"svelte5",
		"utils",
		"actions"
	],
	"scripts": {
		"dev": "vite dev",
		"wasm": "wasm-pack build ./selenite-commons-rs --target web --scope selenite",
		"wasmPublish": "wasm-pack publish --access public",
		"postinstall": "svelte-kit sync",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"coverage": "vitest --coverage",
		"docgen": "typedoc --out ./docs --navigation.excludeReferences true ./src/lib/index.ts"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@fortawesome/free-regular-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@skeletonlabs/floating-ui-svelte": "^0.3.1",
		"lodash-es": "^4.17.21",
		"regenerator-runtime": "^0.14.1",
		"svelte": "^5.2.0",
		"svelte-fa": "^4.0.2",
		"svelte-floating-ui": "^1.5.9",
		"wu": "^2.1.0"
	},
	"devDependencies": {
		"@happy-dom/global-registrator": "^17.4.4",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.4",
		"@types/autosize": "^4.0.3",
		"@types/core-js": "^2.5.8",
		"@types/eslint": "^9.6.1",
		"@types/lodash-es": "^4.17.12",
		"@types/ml-classify-text": "^2.0.3",
		"@types/node": "^22.15.3",
		"@types/pluralize": "^0.0.33",
		"@types/uuid": "^10.0.0",
		"@types/wu": "^2.1.44",
		"@vitest/coverage-v8": "^3.1.2",
		"daisyui": "^5.0.28",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"globals": "^16.0.0",
		"happy-dom": "17.4.4",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.12",
		"svelte-check": "^4.1.6",
		"svelte-eslint-parser": "^1.1.3",
		"svelte-persisted-store": "0.12.0",
		"tailwindcss": "^4.1.4",
		"tslib": "^2.8.1",
		"typedoc": "0.26.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.31.0",
		"vite": "^6.3.3",
		"vite-plugin-wasm-pack": "^0.1.12",
		"vitest": "^3.1.2",
		"wasm-pack": "^0.13.1"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@neodrag/svelte": "^2.3.2",
		"@selenite/commons-rs": "^0.1.2",
		"autosize": "^6.0.1",
		"core-js": "^3.41.0",
		"fast-xml-parser": "^4.5.3",
		"ml-classify-text": "^2.0.1",
		"pluralize": "^8.0.0",
		"svelte-portal": "^2.2.1",
		"uuid": "^11.1.0"
	}
}
