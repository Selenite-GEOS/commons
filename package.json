{
	"name": "@selenite/commons",
	"version": "0.18.4",
	"repository": "github:ShaitanLyss/selenite-commons",
	"scripts": {
		"dev": "vite dev",
		"wasm": "wasm-pack build ./selenite-commons-rs --target web",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"docgen": "typedoc --out ./docs ./src/lib/index.ts"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0-next.197"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/autosize": "^4.0.3",
		"@types/bun": "^1.1.6",
		"@types/eslint": "^8.56.7",
		"@types/lodash-es": "^4.17.12",
		"@types/ml-classify-text": "^2.0.3",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.12.10",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.39",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^5.0.0-next.195",
		"svelte-check": "^3.6.0",
		"svelte-persisted-store": "^0.11.0",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.4.1",
		"typedoc": "^0.26.5",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.11",
		"vite-plugin-wasm-pack": "^0.1.12",
		"vitest": "^1.2.0",
		"wasm-pack": "^0.13.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@neodrag/svelte": "^2.0.6",
		"@types/core-js": "^2.5.8",
		"@types/pluralize": "^0.0.33",
		"@types/uuid": "^10.0.0",
		"@types/wu": "^2.1.44",
		"autosize": "^6.0.1",
		"core-js": "^3.37.1",
		"fast-xml-parser": "^4.4.0",
		"lodash-es": "^4.17.21",
		"ml-classify-text": "^2.0.1",
		"pluralize": "^8.0.0",
		"regenerator-runtime": "^0.14.1",
		"selenite-commons-rs": "^0.1.0",
		"uuid": "^10.0.0",
		"wu": "^2.1.0"
	}
}